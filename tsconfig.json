{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "es6"
    ],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "paths": {
      "fluxx": [
        "build/fluxx"
      ]
    },
    "rootDirs": [
      "src",
      "tests"
    ],
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "target": "es6"
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "typings/**/*",
    "node_modules/fluxx/*"
  ]
}